enum Role {
  USER
  ADMIN
}

enum FieldType {
  TEXT
  NUMBER
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  username  String  @unique
  password  String
  firstName String?
  lastName  String?
  role      Role    @default(USER)

  department   Department? @relation(fields: [departmentId], references: [id])
  departmentId Int?
}

model Department {
  id    Int    @id @default(autoincrement())
  name  String
  users User[]
}

model Product {
  id   Int    @id @default(autoincrement())
  name String
}

// PROCESS TEMPLATE
model ProcessTemplate {
  id   Int    @id @default(autoincrement())
  name String

  fields      ProcessTemplateField[]
  stages      ProcessTemplateStage[]
  stageFlows  ProcessTemplateStageFlow[]
  stageFields ProcessTemplateStageField[]
}

model ProcessTemplateField {
  id   Int    @id @default(autoincrement())
  name String

  formFields ProcessTemplateStageField[]

  template   ProcessTemplate @relation(fields: [templateId], references: [id])
  templateId Int
}

model ProcessTemplateStage {
  id   Int    @id @default(autoincrement())
  name String

  fields    ProcessTemplateStageField[]
  flowsFrom ProcessTemplateStageFlow[]  @relation("flowsFrom")
  flowsTo   ProcessTemplateStageFlow[]  @relation("flowsTo")

  template   ProcessTemplate @relation(fields: [templateId], references: [id])
  templateId Int
}

model ProcessTemplateStageFlow {
  id    Int     @id @default(autoincrement())
  value String?

  stage   ProcessTemplateStage @relation("flowsFrom", fields: [stageId], references: [id])
  stageId Int

  nextStage   ProcessTemplateStage @relation("flowsTo", fields: [nextStageId], references: [id])
  nextStageId Int

  field   ProcessTemplateStageField? @relation(fields: [fieldId], references: [id])
  fieldId Int?

  template   ProcessTemplate @relation(fields: [templateId], references: [id])
  templateId Int
}

model ProcessTemplateStageField {
  id          Int       @id @default(autoincrement())
  type        FieldType @default(TEXT)
  label       String?
  description String?
  placeholder String?

  flows ProcessTemplateStageFlow[]

  stage   ProcessTemplateStage @relation(fields: [stageId], references: [id])
  stageId Int

  field   ProcessTemplateField @relation(fields: [fieldId], references: [id])
  fieldId Int

  template   ProcessTemplate @relation(fields: [templateId], references: [id])
  templateId Int
}

